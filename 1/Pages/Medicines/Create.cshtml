@page
@model CreateModel
@{
    ViewData["Title"] = "Create Medicine";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create Medicine</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Medicine.Name" class="control-label"></label>
        <input asp-for="Medicine.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Medicine.Manufacturer" class="control-label"></label>
        <input asp-for="Medicine.Manufacturer" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Medicine.Price" class="control-label"></label>
        <input asp-for="Medicine.Price" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Medicine.StockQuantity" class="control-label"></label>
        <input asp-for="Medicine.StockQuantity" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
</form>
